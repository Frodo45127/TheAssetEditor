<UserControl x:Class="Editors.Audio.Presentation.AudioEditor.Views.AudioEditorSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:Editors.Audio.Presentation.AudioEditor.ViewModels"
             xmlns:converters="clr-namespace:Editors.Audio.Presentation.AudioEditor"
             d:DataContext="{d:DesignInstance Type=viewmodels:AudioEditorSettingsViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="800">

    <!-- Resources Section -->
    <UserControl.Resources>
        <converters:EnumConverter x:Key="EnumConverter"/>
        <Style x:Key="CenterHeaderGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ContentPresenter Grid.Row="1" Content="{TemplateBinding Content}" />
                            <Border Grid.Row="0"
                                    Background="#3a3a3a" 
                                    BorderBrush="#4f4f4f"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <TextBlock Text="{TemplateBinding Header}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="0, 7, 0, 7"
                                           Foreground="White"
                                           FontSize="14"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <!-- Audio Project Configuration -->
        <GroupBox DockPanel.Dock="Top" Header="Audio Project Configuration" Style="{StaticResource CenterHeaderGroupBoxStyle}">
            
            <StackPanel>
                <!-- Event Type Selection -->
                <Grid Margin="0 5 5 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Event Type" Margin="0,0,0,0" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1"
                      ItemsSource="{Binding AudioProjectEventType}" 
                      SelectedItem="{Binding SelectedAudioProjectEventType}" 
                      ToolTip="PLACEHOLDER TOOLTIP"
                      VerticalAlignment="Center"/>
                </Grid>

                <!-- Event Subtype Selection -->
                <Grid Margin="0 0 5 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Event Subtype" Margin="0,0,0,0" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1"
                      ItemsSource="{Binding AudioProjectSubTypes}" 
                      SelectedItem="{Binding SelectedAudioProjectEventSubtype}" 
                      ToolTip="PLACEHOLDER TOOLTIP"
                      VerticalAlignment="Center"/>
                </Grid>

                <!-- Dialogue Events Preset Configuration -->
                <Grid Margin="0 0 5 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Dialgue Events Preset:" Grid.Column="0"/>

                    <!-- All CheckBox -->
                    <CheckBox Content="All" Margin="0 2.5 5 0"
                              IsChecked="{Binding SelectedDialogueEventsPreset, Converter={StaticResource EnumConverter}, ConverterParameter={x:Static viewmodels:DialogueEventsPreset.All}}"
                              ToolTip="PLACEHOLDER TOOLTIP"
                              Grid.Column="1"/>

                    <!-- Essential CheckBox -->
                    <CheckBox Content="Essential" Margin="0 2.5 5 0"
                              IsChecked="{Binding SelectedDialogueEventsPreset, Converter={StaticResource EnumConverter}, ConverterParameter={x:Static viewmodels:DialogueEventsPreset.Essential}}"
                              ToolTip="PLACEHOLDER TOOLTIP"
                              Grid.Column="2"/>
                </Grid>
            </StackPanel>
            
        </GroupBox>

        <!-- Dialogue Events Preset Configuration -->
        <GroupBox Header="Custom States" Style="{StaticResource CenterHeaderGroupBoxStyle}">
            <DataGrid x:Name="AudioEditorDataGrid" DockPanel.Dock="Bottom" Margin="5 5 5 5" AutoGenerateColumns="False">
            </DataGrid>
        </GroupBox>

    </DockPanel>
</UserControl>
