<UserControl 
    x:Class="Editors.Audio.AudioEditor.AudioSettings.AudioSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:extendedwpftoolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
    xmlns:converters="clr-namespace:Editors.Audio.AudioEditor.Converters"
    xmlns:audiosettings="clr-namespace:Editors.Audio.AudioEditor.AudioSettings"
    d:DataContext="{d:DesignInstance Type=audiosettings:AudioSettingsViewModel}"
    mc:Ignorable="d"
    d:DesignHeight="550"
    d:DesignWidth="960">

    <UserControl.Resources>
        <BooleanToVisibilityConverter 
            x:Key="BoolToVisibilityConverter"/>
        <converters:SettingsEnumConverter 
            x:Key="SettingsEnumConverter"/>
        <DataTemplate 
            x:Key="EnumToStringTemplate">
            <TextBlock 
                Text="{Binding Converter={StaticResource SettingsEnumConverter}}"/>
        </DataTemplate>
    </UserControl.Resources>

    <Grid 
        Visibility="{Binding IsAudioSettingsVisible, Converter={StaticResource BoolToVisibilityConverter}}">

        <Grid.RowDefinitions>
            <RowDefinition 
                Height="Auto"/>
            <RowDefinition 
                Height="Auto"/>
            <RowDefinition 
                Height="Auto"/>
            <RowDefinition 
                Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*"/>
        </Grid.ColumnDefinitions>

        <Label 
            Grid.Row="0" 
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Content="Audio Settings"/>

        <Grid
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="0, 0, 0, 0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="Auto"/>
                <ColumnDefinition
                    Width="Auto"/>
                <ColumnDefinition
                    Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button 
                Grid.Column="0"
                Content="Reset Audio Settings" 
                ToolTip="PLACEHOLDER"
                Margin="5, 0, 0, 5" 
                Width="130" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left"
                Command="{Binding ResetAudioSettingsCommand}"/>

            <Button 
                Grid.Column="1"
                ToolTip="PLACEHOLDER" 
                Width="200" 
                Margin="5, 0, 0, 5" 
                VerticalAlignment="Center"
                Content="Set Recommended Audio Settings"
                Command="{Binding SetRecommendedAudioSettingsCommand}"/>

            <CheckBox 
                Grid.Column="2"
                Content="Show Settings from Audio Project Viewer"
                ToolTip="PLACEHOLDER" 
                Margin="5, 0, 0, 5" 
                VerticalAlignment="Center" 
                IsChecked="{Binding ShowSettingsFromAudioProjectViewer, Mode=TwoWay}" 
                HorizontalAlignment="Left"/>
        </Grid>

        <Grid
            Grid.Row="2"
            Grid.Column="0"
            Margin="0, 0, 0, 0">

            <Grid.RowDefinitions>
                <RowDefinition 
                    Height="Auto"/>
                <RowDefinition 
                    Height="Auto"/>
                <RowDefinition 
                    Height="Auto"/>
                <RowDefinition 
                    Height="Auto"/>
                <RowDefinition 
                    Height="Auto"/>
            </Grid.RowDefinitions>

            <Border 
                Grid.Row="0"
                Grid.Column="1"
                BorderBrush="{DynamicResource Button.Static.Border}"
                BorderThickness="0, 0, 0, 0">

                <Expander 
                    x:Name="ExpanderAudioFiles"
                    Style="{StaticResource ExpanderWithBorderBackground}"
                    IsExpanded="True"
                    Padding="0,0,0,0"
                    BorderBrush="{DynamicResource Button.Static.Border}">

                    <Expander.Header>
                        <DockPanel 
                            VerticalAlignment="Center" 
                            LastChildFill="True" 
                            Margin="10, 5, 10, 5">

                            <TextBlock 
                                Text="Audio Files"
                                VerticalAlignment="Center"
                                Margin="-5, 0, 10, 0" />
                        </DockPanel>
                    </Expander.Header>

                    <ListView
                        ItemsSource="{Binding AudioFiles}"
                        Height="135"
                        MaxHeight="135">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn 
                                    Header="File Name" 
                                    DisplayMemberBinding="{Binding FileName}"
                                    Width="Auto"/>
                                <GridViewColumn 
                                    Header="File Path" 
                                    DisplayMemberBinding="{Binding FilePath}"
                                    Width="Auto"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Expander>
            </Border>
            
            <Border 
                Grid.Row="1"
                BorderBrush="{DynamicResource Button.Static.Border}">

                <Expander 
                    Style="{StaticResource ExpanderWithBorderBackground}"
                    IsExpanded="False"
                    Padding="5,0,0,0"
                    BorderBrush="{DynamicResource Button.Static.Border}">

                    <Expander.Header>
                        <DockPanel 
                            VerticalAlignment="Center" 
                            LastChildFill="True" 
                            Margin="10, 5, 10, 5">

                            <TextBlock 
                                Text="General"
                                VerticalAlignment="Center"
                                Margin="-5, 0, 10, 0" />
                        </DockPanel>
                    </Expander.Header>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition 
                                Height="Auto"/>
                            <RowDefinition 
                                Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition 
                                Width="150"/>
                            <ColumnDefinition 
                                Width="200"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock 
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="10, 10, 5, 5"
                            Text="Volume"/>

                        <extendedwpftoolkit:DecimalUpDown
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10, 10, 10, 5"
                            Minimum="-200"
                            Maximum="200"
                            Increment="0.05"
                            ClipValueToMinMax="True"
                            Value="{Binding Volume, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            IsEnabled="{Binding IsVolumeEnabled}"/>

                        <TextBlock 
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="10, 0, 5, 5"
                            Text="Initial Delay"/>

                        <extendedwpftoolkit:DecimalUpDown
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10, 0, 10, 5"
                            Minimum="0"
                            Maximum="3600"
                            Increment="0.05"
                            ClipValueToMinMax="True"
                            Value="{Binding InitialDelay, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            IsEnabled="{Binding IsInitialDelayEnabled}"/>
                    </Grid>
                </Expander>
            </Border>

            <Border 
                Grid.Row="2"
                Grid.Column="0"
                BorderBrush="{DynamicResource Button.Static.Border}">

                <Expander 
                    Style="{StaticResource ExpanderWithBorderBackground}"
                    IsExpanded="False"
                    Padding="5,0,0,0"
                    BorderBrush="{DynamicResource Button.Static.Border}">

                    <Expander.Header>
                        <DockPanel 
                            VerticalAlignment="Center"    
                            LastChildFill="True"      
                            Margin="10, 5, 10, 5">

                            <TextBlock 
                                Text="Playlist"
                                VerticalAlignment="Center"
                                Margin="-5, 0, 10, 0" />
                        </DockPanel>
                    </Expander.Header>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition 
                                Height="Auto"/>
                            <RowDefinition 
                                Height="Auto"/>
                            <RowDefinition 
                                Height="Auto"/>
                            <RowDefinition 
                                Height="Auto"/>
                            <RowDefinition 
                                Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition 
                                Width="150"/>
                            <ColumnDefinition 
                                Width="200"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock 
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="10, 10, 5, 5"
                            Text="Playlist Type"/>

                        <ComboBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10, 10, 10, 5"
                            ItemsSource="{Binding PlaylistTypes}" 
                            SelectedItem="{Binding PlaylistType}" 
                            ItemTemplate="{StaticResource EnumToStringTemplate}"
                            IsEnabled="{Binding IsPlaylistTypeEnabled}"/>

                        <TextBlock 
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="10, 0, 5, 5"
                            Text="Playlist Mode"/>

                        <ComboBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10, 0, 10, 5"
                            ItemsSource="{Binding PlaylistModes}" 
                            SelectedItem="{Binding PlaylistMode}" 
                            ItemTemplate="{StaticResource EnumToStringTemplate}"
                            IsEnabled="{Binding IsPlaylistModeEnabled}"/>

                        <CheckBox
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="10, 0, 5, 5"
                            Content="Repetition Interval"
                            IsChecked="{Binding EnableRepetitionInterval, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            IsEnabled="{Binding IsEnableRepetitionIntervalEnabled}"/>

                        <extendedwpftoolkit:IntegerUpDown 
                            Grid.Row="2"
                            Grid.Column="1"
                            Minimum="1"
                            Maximum="999"
                            ClipValueToMinMax="True"
                            Margin="10, 0, 10, 5"
                            Value="{Binding RepetitionInterval, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            IsEnabled="{Binding IsRepetitionIntervalEnabled}"/>

                        <TextBlock 
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="10, 0, 5, 5"
                            Text="End Behaviour"/>

                        <ComboBox
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="10, 0, 10, 5"
                            ItemsSource="{Binding EndBehaviours}" 
                            SelectedItem="{Binding EndBehaviour}" 
                            ItemTemplate="{StaticResource EnumToStringTemplate}"
                            IsEnabled="{Binding IsEndBehaviourEnabled}"/>
                    </Grid>
                </Expander>
            </Border>

            <Border 
                Grid.Row="3"
                Grid.Column="0"
                BorderBrush="{DynamicResource Button.Static.Border}"
                BorderThickness="0, 0, 0, 0">

                <Expander 
                    Style="{StaticResource ExpanderWithBorderBackground}"
                    IsExpanded="False"
                    Padding="5,0,0,0"
                    BorderBrush="{DynamicResource Button.Static.Border}">

                    <Expander.Header>
                        <DockPanel 
                            VerticalAlignment="Center" 
                            LastChildFill="True" 
                            Margin="10, 5, 10, 5">

                            <TextBlock 
                                Text="Playlist Looping"
                                VerticalAlignment="Center"
                                Margin="-5, 0, 10, 0" />
                        </DockPanel>
                    </Expander.Header>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition 
                                Height="Auto"/>
                            <RowDefinition 
                                Height="Auto"/>
                            <RowDefinition 
                                Height="Auto"/>
                            <RowDefinition 
                                Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition 
                                Width="150"/>
                            <ColumnDefinition 
                                Width="200"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock 
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="10, 10, 5, 5"
                            Text="Enable"/>

                        <CheckBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10, 10, 10, 5"
                            IsChecked="{Binding EnableLooping, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            IsEnabled="{Binding IsEnableLoopingEnabled}"/>

                        <TextBlock 
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="10, 0, 5, 5"
                            Text="Loop Infinitely"/>

                        <CheckBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10, 0, 10, 5"
                            IsChecked="{Binding LoopInfinitely, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            IsEnabled="{Binding IsLoopInfinitelyEnabled}"/>

                        <TextBlock 
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="10, 1, 5, 5"
                            Text="Number of Loops"/>

                        <extendedwpftoolkit:IntegerUpDown 
                            Grid.Row="2"
                            Grid.Column="1"
                            Minimum="1"
                            Maximum="32767"
                            ClipValueToMinMax="True"
                            Margin="10, 0, 10, 10"
                            Value="{Binding NumberOfLoops, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            IsEnabled="{Binding IsNumberOfLoopsEnabled}"/>
                    </Grid>
                </Expander>
            </Border>

            <Border 
                Grid.Row="4"
                Grid.Column="0"
                BorderBrush="{DynamicResource Button.Static.Border}"
                BorderThickness="0, 0, 0, 0">

                <Expander 
                    Style="{StaticResource ExpanderWithBorderBackground}"
                    IsExpanded="False"
                    Padding="5,0,0,0"
                    BorderBrush="{DynamicResource Button.Static.Border}">

                    <Expander.Header>
                        <DockPanel 
                            VerticalAlignment="Center" 
                            LastChildFill="True" 
                            Margin="10, 5, 10, 5">

                            <TextBlock 
                                Text="Playlist Transitions"
                                VerticalAlignment="Center"
                                Margin="-5, 0, 10, 0" />
                        </DockPanel>
                    </Expander.Header>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition 
                                Height="Auto"/>
                            <RowDefinition 
                                Height="Auto"/>
                            <RowDefinition 
                                Height="Auto"/>
                            <RowDefinition 
                                Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition 
                                Width="150"/>
                            <ColumnDefinition 
                                Width="200"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock 
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="10, 10, 5, 5"
                            Text="Enable"/>

                        <CheckBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10, 10, 10, 5"
                            IsChecked="{Binding EnableTransitions, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            IsEnabled="{Binding IsEnableTransitionsEnabled}"/>

                        <TextBlock 
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="10, 0, 5, 5"
                            Text="Transition Type"/>

                        <ComboBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10, 0, 10, 5"
                            ItemsSource="{Binding Transitions}" 
                            SelectedItem="{Binding Transition}" 
                            ItemTemplate="{StaticResource EnumToStringTemplate}"
                            IsEnabled="{Binding IsTransitionTypeEnabled}"/>

                        <TextBlock 
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="10, 1, 5, 5"
                            Text="Duration"/>

                        <extendedwpftoolkit:DecimalUpDown  
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="10, 0, 10, 10"
                            Minimum="0"
                            Maximum="3600"
                            Increment="0.05"
                            ClipValueToMinMax="True"
                            Value="{Binding Duration, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            IsEnabled="{Binding IsDurationEnabled}"/>
                    </Grid>
                </Expander>
            </Border>
        </Grid>

        <Border 
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Height="5" 
            Background="{DynamicResource App.Border}"/>
    </Grid>
</UserControl>
