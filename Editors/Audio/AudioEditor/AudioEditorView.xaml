<UserControl 
    x:Class="Editors.Audio.AudioEditor.AudioEditorView"
    x:Name="AudioEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:s="http://schemas.singulink.com/xaml" 
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:extendedwpftoolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
    xmlns:converters="clr-namespace:Editors.Audio.AudioEditor.Converters" 
    xmlns:behaviors="clr-namespace:Shared.Ui.Common.Behaviors;assembly=Shared.Ui" 
    xmlns:data="clr-namespace:Editors.Audio.AudioEditor.Data"
    xmlns:audioeditor="clr-namespace:Editors.Audio.AudioEditor"
    xmlns:audiofilesExplorer="clr-namespace:Editors.Audio.AudioEditor.AudioFilesExplorer"
    xmlns:audioprojectexplorer="clr-namespace:Editors.Audio.AudioEditor.AudioProjectExplorer" 
    xmlns:audioprojecteditor="clr-namespace:Editors.Audio.AudioEditor.AudioProjectEditor" 
    xmlns:audiosettingseditor="clr-namespace:Editors.Audio.AudioEditor.AudioSettingsEditor" 
    d:DataContext="{d:DesignInstance Type=audioeditor:AudioEditorViewModel}"
    mc:Ignorable="d" 
    d:DesignWidth="1200" d:DesignHeight="700">

    <UserControl.Resources>
        <BooleanToVisibilityConverter 
            x:Key="BoolToVisibilityConverter"/>
        <converters:SettingsEnumConverter 
            x:Key="SettingsEnumConverter"/>
        <DataTemplate 
            x:Key="EnumToStringTemplate">
            <TextBlock 
                Text="{Binding Converter={StaticResource SettingsEnumConverter}}"/>
        </DataTemplate>
        <sys:Double 
            x:Key="DefaultHeight">23</sys:Double>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition 
                Height="Auto"/>
            <RowDefinition 
                Height="Auto"/>
            <RowDefinition 
                Height="*"/>
        </Grid.RowDefinitions>

        <Grid 
            Grid.Row="0" >
            
            <Grid.RowDefinitions>
                <RowDefinition 
                    Height="Auto"/>
            </Grid.RowDefinitions>

            <Menu 
                Grid.Row="0" 
                Margin="0, 5, 5, 0">
                <MenuItem 
                    Header="_File" 
                    HorizontalAlignment="Left">
                    <MenuItem 
                        Header="New Audio Project" 
                        Command="{Binding NewAudioProjectCommand}"/>
                    <MenuItem 
                        Header="Open Audio Project" 
                        Command="{Binding LoadAudioProjectCommand}"/>
                    <MenuItem 
                        Header="Save Audio Project" 
                        Command="{Binding SaveAudioProjectCommand}"/>
                </MenuItem>
            </Menu>
        </Grid>

        <Border 
            Grid.Row="1" 
            Height="5" 
            Background="{DynamicResource App.Border}" 
            Margin="0, 5, 0, 0"/>

        <Grid 
            Grid.Row="2">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition 
                    Width="485"/>
                <ColumnDefinition 
                    Width="Auto"/>
                <ColumnDefinition 
                    Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid 
                Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition 
                        Height="*"/>
                </Grid.RowDefinitions>

                <Grid 
                    Grid.Row="1">

                    <Grid.RowDefinitions>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="*"/>
                    </Grid.RowDefinitions>

                    <audioprojectexplorer:AudioProjectExplorerView
                        Grid.Row="0"
                        Grid.Column="0"
                        DataContext="{Binding AudioProjectExplorerViewModel}"/>

                    <GridSplitter
                        Grid.Row="1"
                        Height="5"
                        Background="{DynamicResource App.Border}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch"
                        ResizeBehavior="PreviousAndNext"
                        ResizeDirection="Rows"/>

                    <audiofilesExplorer:AudioFilesExplorerView 
                        Grid.Row="2"
                        Grid.Column="0"
                        DataContext="{Binding AudioFilesExplorerViewModel}"/>
                </Grid>
            </Grid>

            <GridSplitter 
                Grid.Column="1" 
                Width="5" 
                Background="{DynamicResource App.Border}" 
                VerticalAlignment="Stretch" 
                HorizontalAlignment="Center"
                ResizeBehavior="PreviousAndNext" 
                ResizeDirection="Columns"/>
            
            <Grid 
                Grid.Column="2">

                <Grid.RowDefinitions>
                    <RowDefinition 
                        Height="Auto"/>
                    <RowDefinition 
                        Height="Auto"/>
                    <RowDefinition 
                        Height="Auto"/>
                    <RowDefinition 
                        Height="Auto"/>
                    <RowDefinition 
                        Height="Auto"/>
                    <RowDefinition 
                        Height="*"/>
                </Grid.RowDefinitions>

                <audioprojecteditor:AudioProjectEditorView
                    Grid.Row="0"
                    Grid.Column="0"
                    DataContext="{Binding AudioProjectEditorViewModel}"/>

                <Border 
                    Grid.Row="1"
                    Height="5" 
                    Background="{DynamicResource App.Border}"/>
                
                <audiosettingseditor:AudioSettingsEditorView 
                    Grid.Row="2"
                    Grid.Column="0"
                    DataContext="{Binding AudioSettingsEditorViewModel}"/>

                <Border 
                    Grid.Row="3"
                    Height="5" 
                    Background="{DynamicResource App.Border}"/>

                <Label 
                    Grid.Row="4"
                    Content="{Binding AudioProjectViewerLabel}"/>
                
                <!-- Setting CanUserAddRows to false ensures that data won't go missing from the last row when a new row is added. Wtf WPF. -->
                <DataGrid 
                    Grid.Row="5"
                    Margin="0, 0, 0, 0"
                    Tag="{Binding AudioProjectEditorFullDataGridTag}" 
                    AutoGenerateColumns="False" 
                    VerticalScrollBarVisibility="Auto" 
                    SelectionChanged="DataGrid_SelectionChanged"
                    CanUserAddRows="False"
                    ItemsSource="{Binding AudioProjectEditorFullDataGrid}"
                    EnableRowVirtualization="True" 
                    EnableColumnVirtualization="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>