<UserControl x:Class="Editors.KitbasherEditor.ViewModels.SceneNodeEditor.Nodes.MeshNode.Mesh.WsMaterial.Tint.TintView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editors.KitbasherEditor.ViewModels.SceneNodeEditor.Nodes.MeshNode.Mesh.WsMaterial.Tint" xmlns:mathviews="clr-namespace:CommonControls.MathViews;assembly=Shared.Ui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\WsModelResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ContentControl DockPanel.Dock="Top">

        <Expander DockPanel.Dock="Top" IsExpanded="True">
            <Expander.Header>
                <DockPanel  DockPanel.Dock="Top"  Background="{DynamicResource GroupBox.Header.Static.Background}">
                    <Label Content="Tint and Faction" FontSize="{StaticResource HeaderFontSize}" Width="{StaticResource HeaderLabelLength}"/>
                    <Separator/>
                </DockPanel>
            </Expander.Header>

            <DockPanel LastChildFill="False">

                <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                    <Label Width ="{StaticResource labelWidth}" DockPanel.Dock="Left" Content="Diffuse Tint Mask" Margin="{StaticResource LabelMargin}"/>
                    <Label>:</Label>
                    <mathviews:Vector4View/>
                </DockPanel>

                <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                    <Label Width ="{StaticResource labelWidth}" DockPanel.Dock="Left" Content="Diffuse Tint Colour" Margin="{StaticResource LabelMargin}"/>
                    <Label>:</Label>
                    <Button Width="20" Height="20" DockPanel.Dock="Right" Margin="5,0,5,0"/>
                    <mathviews:Vector3View />

                </DockPanel>

                <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                    <Label Width ="{StaticResource labelWidth}" DockPanel.Dock="Left" Content="Use faction colours" Margin="{StaticResource LabelMargin}"/>
                    <Label>:</Label>
                    <CheckBox />
                </DockPanel>


                <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                    <Label Width ="{StaticResource labelWidth}" DockPanel.Dock="Left" Content="Faction Mask" Margin="{StaticResource LabelMargin}"/>
                    <Label>:</Label>
                    <mathviews:Vector4View/>
                </DockPanel>





            </DockPanel>
        </Expander>
    </ContentControl>


</UserControl>

