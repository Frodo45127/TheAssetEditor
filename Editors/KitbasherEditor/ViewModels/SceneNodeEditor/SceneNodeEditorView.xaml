<UserControl x:Class="KitbasherEditor.Views.SceneItemEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KitbasherEditor.Views" 
             xmlns:sceneexplorer="clr-namespace:Editors.KitbasherEditor.ViewModels.SceneExplorer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <sceneexplorer:NodeViewTemplateSelector x:Key="NodeContentSelector" />
    </UserControl.Resources>
    
    <ScrollViewer>
        <ContentControl Grid.Row="2" 
                        Content="{Binding Path=SelectedNodeViewModel, UpdateSourceTrigger=PropertyChanged}" 
                        ContentTemplateSelector="{StaticResource NodeContentSelector}"  />
    </ScrollViewer>
</UserControl>
