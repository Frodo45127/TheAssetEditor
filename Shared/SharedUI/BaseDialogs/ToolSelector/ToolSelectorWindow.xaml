<Window x:Class="CommonControls.BaseDialogs.ToolSelector.ToolSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonControls.BaseDialogs.ToolSelector"
        mc:Ignorable="d"
        Title="Tool Selector" Height="90" Width="300"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <DockPanel >
        <DockPanel  DockPanel.Dock="Top" Margin="5">
            <Label DockPanel.Dock="Left">Tool:</Label>
            <ComboBox DockPanel.Dock="Left" x:Name="PossibleToolsComboBox" Width="250"/>
        </DockPanel>
        <Button DockPanel.Dock="Bottom" Margin="5,5,5,5" Click="Button_Click">Open</Button>
      
        
    </DockPanel>
</Window>
