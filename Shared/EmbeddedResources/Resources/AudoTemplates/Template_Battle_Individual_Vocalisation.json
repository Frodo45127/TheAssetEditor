{
  "Settings": {
    "BnkName": "battle_individual_vocalisation__template", // This should be the first part of the name of the vanilla bnk e.g. "battle_individual_vocalisation__" anything after can be custom.
    "Language": "english(uk)" // The language folder within the Wwise folder that the project is output to.
  },

  "Project": [
    {
      "Event": "Battle_Individual_Vocalisation_template_event_1", // The Event name should start with "Battle_Individual_Vocalisation_" .
      "Sounds": [
        "C:\\path\\to\\your_wav_1.wav" // The path to your wav file on your computer.
      ],
      "ActorMixer": "508226369" // The top level actor mixer as seen in the Audio Explorer.
    },
    {
      "Event": "Battle_Individual_Vocalisation_template_event_2",
      "SoundContainerType": "Random", // When using multiple sounds add this SoundContainerType section and use "Random" for a random container.
      "Sounds": [
        "C:\\path\\to\\your_wav_2.wav",
        "C:\\path\\to\\your_wav_3.wav"
      ],
      "ActorMixer": "508226369"
    }
  ]
}

