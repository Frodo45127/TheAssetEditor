{
  "Settings": {
    "BnkName": "global_ui__template", // This should be the first part of the name of the vanilla bnk e.g. "global_ui__" anything after can be custom.
    "Language": "english(uk)" // The language folder within the Wwise folder that the project is output to.
  },

  "Project": [
    {
      "Event": "UI_template_event_1", // The Event name should start with "UI_" .
      "Sounds": [
        "C:\\path\\to\\your_wav_1.wav" // The path to your wav file on your computer.
      ],
      "ActorMixer": "608071769" // The top level actor mixer as seen in the Audio Explorer.
    },
    {
      "Event": "UI_template_event_2",
      "SoundContainerType": "Random", // When using multiple sounds add this SoundContainerType section and use "Random" for a random container.
      "Sounds": [
        "C:\\path\\to\\your_wav_2.wav",
        "C:\\path\\to\\your_wav_3.wav"
      ],
      "ActorMixer": "608071769"
    }
  ]
}

